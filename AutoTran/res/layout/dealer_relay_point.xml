<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lite_lite_gray"
        tools:ignore="MissingConstraints" >

        <LinearLayout
            android:id="@+id/LinearLayout_H"
            android:orientation="vertical"
            android:layout_height ="wrap_content"
            android:layout_width ="0dip"
            android:layout_weight="77">

            <TextView
                android:id="@+id/dealer_relay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="4dp"
                android:paddingLeft="5dp"
                android:paddingBottom="4dp"
                android:textColor="#555555"
                android:text="Midpoint:" />

            <TextView
                android:id="@+id/relay_point_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textColor="#666"

                android:text="Vin Details" />

            <TextView
                android:id="@+id/relay_point_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lite_red"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:text="Dealer Name" />
        </LinearLayout>

        <TextView
            style="@style/DealerInfo"
            android:layout_width ="0dip"
            android:layout_weight="17"
            android:background="@drawable/button_bg"
            android:text="@string/dealerInfoIconDefault"
            android:textSize="11sp"
            android:textColor="@color/lite_lite_lite_gray"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/infoIcon" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>