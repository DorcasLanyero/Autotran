<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    <com.cassens.autotran.views.CustomScrollView
        android:id="@+id/tips_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tips_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                />

            <CheckBox
                android:id="@+id/tips_confirmation"
                android:layout_gravity="center_horizontal"
                style="@style/CheckBoxRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/tips_confirmation" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/signature_review"
                />

            <TextView
                android:id="@+id/tips_textbox_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:text="@string/tips_textbox_prompt" />

            <LinearLayout
                android:id="@+id/tips_textbox_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/tips_textbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textfield"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:imeOptions="actionDone"
                    android:imeActionLabel="DONE"
                    android:windowSoftInputMode="adjustResize|stateHidden"
                    android:hint="Driver ID"
                    android:inputType="number"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tips_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                >

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:text="Cancel"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/done_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:text="Done"/>
            </LinearLayout>
        </LinearLayout>

    </com.cassens.autotran.views.CustomScrollView>

</LinearLayout>
