<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >


    <LinearLayout
        android:id="@+id/enter_pay_number_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:id="@+id/enter_pay_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:text="@string/enter_pay_number_prompt" />
        <EditText
            android:id="@+id/pay_number_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/textfield"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:imeOptions="actionDone"
            android:imeActionLabel="DONE"
            android:hint="Driver ID"
            android:inputType="phone"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/person_refusing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:text="@string/person_refusing_prompt" />

    <EditText
        android:id="@+id/first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textfield"
        android:ellipsize="end"
        android:hint="First Name"
        android:imeActionLabel="DONE"
        android:imeOptions="actionNext"
        android:inputType="text|textCapWords"
        android:nextFocusRight="@+id/last_name_edit_text"
        android:nextFocusDown="@+id/last_name_edit_text"
        android:nextFocusForward="@+id/last_name_edit_text"
        android:padding="5dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/textfield"
        android:ellipsize="end"
        android:hint="Last Name"
        android:imeActionLabel="DONE"
        android:imeOptions="actionDone"
        android:inputType="text|textCapWords"
        android:padding="5dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/done_button"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:ems="10"
            android:text="Done" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>
